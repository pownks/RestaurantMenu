@model IEnumerable<RestaurantMenu.Admin.Models.Dish>

@{
    ViewData["Title"] = "Index";
}

<h1>Страви</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg">Створити</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Special)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageBase64)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DishCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Special)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Consist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                <img class="card-img-top" src="data:image/jpeg;base64, @item.ImageBase64" alt="Card image cap" style="height:150px;width:auto">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DishCategory.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
